<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <TextView
        android:id="@+id/tvResumoEvento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Resumo do Evento"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#1A3B9F"
        android:fontFamily="@font/open_sans"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="50dp"/>

    <Spinner
        android:id="@+id/spinnerTipoIngresso"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:padding="12dp"
        android:backgroundTint="#A4BDF1" />

    <EditText
        android:id="@+id/edtCupom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:backgroundTint="#3A94E8"
        android:fontFamily="@font/open_sans"
        android:hint="Cupom de desconto (opcional)"
        android:padding="12dp"
        android:textColorHint="#A4BDF1"
        android:textColor="@color/black"/>

    <Button
        android:id="@+id/btnConfirmarCompra"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Confirmar Compra"
        android:backgroundTint="#1A3B9F"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:fontFamily="@font/open_sans"
        android:padding="14dp" />
</LinearLayout>
